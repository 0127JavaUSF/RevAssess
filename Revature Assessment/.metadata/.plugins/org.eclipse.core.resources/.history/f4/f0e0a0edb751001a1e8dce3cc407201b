package com.assessment.revature.RevAssess;

import java.util.Scanner;

public class User {
	private static int id = 0;
	private static String firstName = "";
	private static String lastName = "";
	private static String username = "";
	private static String password = "";
	private static String role = "";
	
	public static void main(String[] args) {
		User user = new User();
		System.out.println(user.displayUser(id, firstName, lastName, username, password, role));
		
	}
	public User() {
		Scanner scanner = new Scanner(System.in);
		
	}
	
	public User(int id, String firstName, String lastName, String username, String password, String role) {
		super();
		this.id = id;
		this.firstName = firstName;
		this.lastName = lastName;
		this.username = username;
		this.password = password;
		this.role = role;
	}


	
	public void displayUser(int id, String firstName, String lastName, String username, String password, String role) {
		System.out.println("User id: " + id + ", full name: " + firstName + " " + lastName + ", username: "
				+ username + "password: " + password + "role: " + role);
		
	}

}
